@model MVC_CRUD.Product

<h1>Edit Product</h1>

<form method="post">
    <div class="form-group">
        <label for="ProductId">Product ID</label>
        <input type="text" class="form-control" id="ProductId" name="ProductId" value="@Model.ProductId" readonly />
    </div>

    <div class="form-group">
        <label for="ProductName">Product Name</label>
        <input type="text" class="form-control" id="ProductName" name="ProductName" value="@Model.ProductName" />
    </div>

    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select class="form-control" id="CategoryId" name="CategoryId">
            @foreach (var category in ViewBag.Categories)
            {
                if (category.CategoryId == Model.CategoryId)
                {
            <option value="@category.CategoryId" selected>@category.CategoryName</option>
                }
                else
                {
            <option value="@category.CategoryId">@category.CategoryName</option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
