@model MVC_CRUD.Category

@{
    ViewData["Title"] = "Add New Category";
}

<h2>Add New Category</h2>

@if (!ViewData.ModelState.IsValid)
{
<div class="alert alert-danger">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
}

<form method="post" action="/Category/Create">
    <div class="mb-3">
        <label for="CategoryName" class="form-label">Category Name</label>
        <input type="text" class="form-control" id="CategoryName" name="CategoryName" value="@Model.CategoryName" required />
        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
    <a class="btn btn-secondary" href="/Category">Cancel</a>
</form>
