@model MVC_CRUD.Category
@{
    ViewData["Title"] = "Delete Category";
}
<h2>Delete Category</h2>

<p>Are you sure you want to delete this category?</p>

<div class="border p-3 mb-3">
    <p><strong>Category ID:</strong> @Model.CategoryId</p>
    <p><strong>Category Name:</strong> @Model.CategoryName</p>
</div>

<form method="post" asp-action="Delete" asp-controller="Category" asp-route-id="@Model.CategoryId">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Category")">Cancel</a>
</form>
