@model IEnumerable<MVC_CRUD.Models.Category>

@{
    ViewData["Title"] = "Category Index";
}

<h2>Category Index</h2>

<p>
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Create New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })" class="btn btn-warning">Edit</a> |
                    <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

